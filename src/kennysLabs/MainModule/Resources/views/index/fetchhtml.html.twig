{% if tickets is empty %}
    No tickets are available for the introduced query. Please try again. <br/><br/>
    [ <a href="/">Go back</a> ]
{% else %}
    {% for ticket in tickets %}
        <div class="ticket">
            <table>
                <tr>
                    <th colspan="3">{{  ticket.summary }}</th>
                </tr>
                <tr>
                    <td>Konzept:<br />Tage:</td>
                    <td>Design:<br />Tage:</td>
                    <td rowspan="3" class="storypoints"><span>{{ ticket.story_points }}</span></td>
                </tr>
                <tr>
                    <td>FE:<br />Tage:</td>
                    <td>BE:<br />Tage:</td>
                </tr>
                <tr>
                    <td>D-QA:<br />Tage:</td>
                    <td>QA:<br />Tage:</td>
                </tr>
            </table>
        </div>
    {% endfor %}
{% endif %}
